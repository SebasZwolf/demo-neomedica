---
import Button from "../components/Button.astro";
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Medical Center</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <header class="flex items-center justify-between p-6 bg-green-700 text-white">
			<h1 class="text-2xl font-bold">MedCenter</h1>
			<nav class="flex gap-6">
				<a href="#services" class="hover:underline">Services</a>
				<a href="#about" class="hover:underline">About</a>
				<a href="#contact" class="hover:underline">Contact</a>
			</nav>
			<Button text="Book Now" href="#book" />
		</header>
    <main class="p-8 max-w-4xl mx-auto">
      <section class="text-center py-16">
        <h2 class="text-5xl font-bold mb-6">Your Health, Our Priority</h2>
        <p class="text-lg max-w-xl mx-auto mb-6">
          Providing top-notch healthcare services with modern technology and experienced professionals.
        </p>
        <Button text="Get Started" href="#services" />
      </section>
    
      <section id="services" class="py-16 bg-white text-center">
        <h3 class="text-3xl font-bold mb-6">Our Services</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="p-6 bg-gray-200">✔️ General Checkups</div>
          <div class="p-6 bg-gray-200">✔️ Emergency Care</div>
          <div class="p-6 bg-gray-200">✔️ Specialized Treatments</div>
        </div>
      </section>
    
      <section id="about" class="py-16 text-center">
        <h3 class="text-3xl font-bold mb-6">About Us</h3>
        <p class="max-w-xl mx-auto">
          We are a dedicated team of professionals committed to providing excellent medical care in a safe and welcoming environment.
        </p>
      </section>
    
      <section id="contact" class="py-16 bg-white text-center">
        <h3 class="text-3xl font-bold mb-6">Contact Us</h3>
        <p>Email: contact@medcenter.com</p>
        <p>Phone: (123) 456-7890</p>
      </section>
    
    </main>
		<footer class="text-center p-6 bg-green-700 text-white">
			<p>&copy; 2025 MedCenter. All rights reserved.</p>
		</footer>		
  </body>
</html>

